<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ProfileClosetFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/parallaxProfile"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_marginTop="-30dp"
            android:alpha=".2"
            android:background="@drawable/profile_parallax"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/profileBubble"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/parallaxProfile"
            android:layout_alignParentRight="true"
            android:src="@drawable/coco_left_bubble" />

    </RelativeLayout>

</FrameLayout>
